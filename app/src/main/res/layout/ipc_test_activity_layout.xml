<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/getList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="70dp"
        android:text="GetStudent" />

    <Button
        android:id="@+id/addStudent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/getList"
        android:layout_below="@+id/getList"
        android:layout_marginTop="23dp"
        android:text="Add" />

    <Button
        android:id="@+id/removeStudent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/addStudent"
        android:layout_below="@+id/addStudent"
        android:layout_marginTop="23dp"
        android:text="Remove" />

</RelativeLayout>
