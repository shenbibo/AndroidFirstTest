<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="AppToolbarBaseTheme" parent="Theme.AppCompat.Light.NoActionBar"/>
    
    <style name="AppToolbarTheme" parent="AppToolbarBaseTheme">
        <!-- 设置actionBar的颜色 -->
        <item name="colorPrimary">@color/material_blue_700</item>
        <!-- 设置状态栏的颜色, 华为手机上目前设置无效 -->
        <item name="colorPrimaryDark">@color/material_blue_500</item>
        <!-- 设置主窗口的颜色 -->
        <item name="android:windowBackground">@color/dim_foreground_disabled_material_dark</item>
        <!-- 设置editText等控件被选中时的颜色 -->
        <item name="colorAccent">@color/material_green_A200</item>
    </style>
    
    <!-- 解决使用toolbar使用默认的style=Widget.AppCompat.Toolbar时左边部分空间无法使用的问题 -->
     <style name="CustomToolbar" parent="Widget.AppCompat.Toolbar"> 
         <!-- 设置该属性解决空白部分，在Widget.AppCompat.Toolbar style中使用的是16dp--> 
        <item name="contentInsetStart">0dp</item>  
     </style> 
    
</resources>
